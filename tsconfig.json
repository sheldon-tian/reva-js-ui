{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "moduleResolution": "Node",
        "strict": false,
        "outDir": "dist",
        "declarationDir": "declarations",
        "esModuleInterop": true,
        "jsx": "preserve",
        "noImplicitAny": false,
        "declaration": true,
    },
    "include": [
        "src/**/*.ts",
        "src/index.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}